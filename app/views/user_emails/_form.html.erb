<%= form_for user_email do |f| %>
	<% if fax_number %>
		<%= f.hidden_field :fax_number_id, value: "#{fax_number.id}" %>
		<%= f.hidden_field :client_id, value: "#{fax_number.client.id}" %>
	<% end %>
	<div class="form-group">
		<%= f.label :email_address, "Email Address" %>
		<%= f.email_field :email_address, class: "form-control"%>
	</div>
	<div class="form-group">
		<%= f.label :caller_id_number, "Caller ID Number" %>
		<%= f.select :caller_id_number, user_email.client.fax_numbers.map { |fax_num| fax_num.fax_number }, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.submit "Submit", class: "btn btn-primary" %>
	</div>
<% end %>