<body class="bg-dark coverup">
  <div class="container coverup">
    <div class="card smaller-card mx-auto mt-5">
      <div class="card-header">Login:</div>
      <div class="card-body">
        <div class="mb-6">
					<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
						<div class="row">
						  <div class="form-group col">
						    <strong><%= f.label :email, "Email:"%></strong>
						    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
						  </div>
						</div>
						<div class="row">
						  <div class="form-group col">
						    <strong><%= f.label :password, "Password:" %></strong>
						    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
						  </div>
						</div>
						  <% if devise_mapping.rememberable? -%>
								<div class="container row">
									<div class="col-lg-4"></div>
										<div class="col-lg-6">
										<label class="custom-control custom-checkbox push-down-text" style="margin-left:-10px;">
											<input class="custom-control-input" type="checkbox" name="user[rememberme]" value="1" id="user_remember_me">
												<span class="custom-control-indicator"></span>
												<span class="custom-control-description">
													Remember me?
												</span>
										</label>
									</div>
									<div class="col-lg-2"></div>
								</div>
						  <% end -%>
						  <div class="container text-center">
						  	<div class="form-group">
									<%= render "devise/shared/links" %>
								</div>
							  <div class="form-group">
							    <%= f.submit "Log In", class: "btn btn-success col-lg-4" %>
							  </div>
							</div>
						</div>
					<% end %>
	      </div>
	    </div>
	  </div>
	</div>
</body>