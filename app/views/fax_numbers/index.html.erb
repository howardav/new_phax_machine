<div class="row">
	<div class="col-lg-9">
		<h1>Manage Fax Numbers</h1>
	</div>
<!-- 	<div class="col-lg-3 text-right">
		<%#= link_to "Add New Fax Number", new_fax_number_path, class: "btn btn-primary" %>
	</div> -->
</div>
<br>
<table class='table table-hover'>
	<thead class="thead-dark">
		<tr>
			<th class="text-center"></th>
			<th class="text-center">Fax Number</th>
			<th class="text-center">Client</th>
			<th class="text-center">Description</th>
			<th class="text-center">Fax Number Location</th>
			<th class="text-center">Date Provisioned</th>
			<th class="text-center">Edit</th>
		</tr>
	</thead>
	<tbody>
		<% if @fax_numbers %>
			<% @fax_numbers.each do |fax_number, info_hash| %>
				<tr>
					<td class="text-center"><%= image_tag("file-icon.png", size:"24x24") %></td>
					<td class="text-center"><%= fax_number %></td>
					<td class="text-center"><%= info_hash[:client] %></td>
					<td class="text-center"><%= info_hash[:fax_number_label] %></td>
					<% if info_hash[:city] && info_hash[:state] %>
						<td class="text-center"> <%= info_hash[:city] %>, <%= info_hash[:state] %></td>
					<% else %>
						<td class="text-center"></td>
					<% end %>
					<td class="text-center"><%= info_hash[:provisioned_at] %></td>
					<td class="text-center">
						<%= button_to "Edit",
							edit_fax_number_path(id: info_hash[:id]),
							params: { fax_number: { id: info_hash[:id] } },
							class: "btn btn-success btn-sm",
							method: :get
						%>
					</td>
				</tr>
			<% end %>
		<% else %>
			<tr>
				<td class="text-center">No fax numbers have been added yet</td>
			</tr>
		<% end %>
	</tbody>
</table>