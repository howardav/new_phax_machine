<div class="row">
	<div class="col-lg-9">
		<h1>Manage Fax Numbers</h1>
	</div>
</div>
<br>
<table class='table table-hover'>
	<thead class="thead-dark">
		<tr>
			<th></th>
			<th class="text-center">Fax Number</th>
			<th class="text-center">Client</th>
			<th class="text-center">Label</th>
			<th class="text-center">Fax Number Location</th>
			<th class="text-center">Date Provisioned</th>
			<th class="text-center">Edit</th>
		</tr>
	</thead>
	<tbody>
		<% if @fax_numbers %>
			<% @fax_numbers.each do |fax_number, info_hash| %>
				<tr>
					<td class="text-center align-middle"><%= image_tag("file-icon.png", size:"24x24") %></td>
					<td class="text-center align-middle"><%= fax_number %></td>
					<td class="text-center align-middle">
						<% if info_hash[:client] == "Unallocated" %>
							<%= link_to info_hash[:client], clients_path %>
						<% else %>
							<%= link_to info_hash[:client], edit_client_path(id: info_hash[:id]) %>
						<% end %>
					</td>
					<td class="text-center align-middle"><%= info_hash[:fax_number_label] %></td>
					<% if info_hash[:city] && info_hash[:state] %>
						<td class="text-center align-middle"> <%= info_hash[:city] %>, <%= info_hash[:state] %></td>
					<% else %>
						<td class="text-center align-middle"></td>
					<% end %>
					<td class="text-center align-middle"><%= info_hash[:provisioned_at] %></td>
					<td class="text-center align-middle">
						<%= button_to "Edit",
							edit_fax_number_path(id: info_hash[:id]),
							params: { fax_number: { id: info_hash[:id] } },
							class: "btn btn-success btn-sm align-middle",
							method: :get
						%>
					</td>
				</tr>
			<% end %>
		<% else %>
			<tr>
				<td class="text-center">No fax numbers have been added yet</td>
			</tr>
		<% end %>
	</tbody>
</table>